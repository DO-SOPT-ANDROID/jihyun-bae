<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DoSoptTemplate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DoSoptTemplate" parent="Base.Theme.DoSoptTemplate" />

    <style name="Widget.Material.Button.Basic" parent="">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize40Percent" parent="">
        <item name="cornerSize">40%</item>
    </style>

    <style name="CustomTextInputLayout.Main3" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintAnimationEnabled">false</item>
        <item name="colorControlNormal">@color/gray_300</item>
        <item name="colorControlActivated">@color/main_3</item>
        <item name="android:textColorHint">@color/gray_300</item>
        <item name="hintTextColor">@color/main_3</item>
        <item name="boxStrokeColor">@color/main_3</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textCursorDrawable">@color/main_3</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing10</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing10</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing10</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing10</item>
    </style>
</resources>