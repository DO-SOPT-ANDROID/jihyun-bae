<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_landscape_profile_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@drawable/shape_gray_300_line_50_rect">

    <TextView
        android:id="@+id/tv_landscape_profile_info_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="15dp"
        android:textAppearance="@style/TextAppearance.Title"
        android:textColor="@color/gray_400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="상태메시지" />

    <ImageView
        android:id="@+id/iv_landscape_profile_info_icon"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_landscape_profile_info_context"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_add_gray_400_24" />

</androidx.constraintlayout.widget.ConstraintLayout>